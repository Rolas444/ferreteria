     {{form_widget(form.Email)}}
     {{ form_label(form.Direccion, 'Direccion:') }}
     {{form_widget(form.Direccion)}}
     {{ form_label(form.Fax, 'Fax :') }}
     {{form_widget(form.Fax)}}
     {{ form_label(form.Web, 'web :') }}
     {{form_widget(form.Web)}}
     {{ form_label(form.Telefono, 'Telefono :') }}
     {{form_widget(form.Telefono)}}
     {{ form_label(form.Observacion, 'Observaciones:') }}
     {{form_widget(form.Observacion)}} 
     {{ form_label(form.Ubigeo, 'Ubigeo:') }}
