<article class="module width_full">
    <header><h3>Detalle de Art√≠culo</h3></header>
    <div class="module_content">
        <h1>Pedido</h1>

    <table class="record_properties">
        <tbody>


            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.Fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
