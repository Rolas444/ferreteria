        </form>

        <form action="{{ path('compra_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}                                                                                           
        </form>

    </div>
    <footer>
        <div class="submit_link">
            <button type="submit" class="alt_btn">Eliminar</button>                       
            <button type="submit">Guardar</button>
        </div>
    </footer>
                            
