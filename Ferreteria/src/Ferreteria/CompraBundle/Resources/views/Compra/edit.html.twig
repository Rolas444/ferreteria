            {{ form_label(edit_form.Fecha, 'Fecha :') }}
            {{form_widget(edit_form.Fecha)}}</fieldset>
            <fieldset style="width:25%; padding: 2%;">
            {{ form_label(edit_form.MontoTotal, 'Monto Total :') }}
            {{form_widget(edit_form.MontoTotal)}}</fieldset>
            <fieldset style="width:25%; padding: 2%;">
            {{ form_label(edit_form.TipoPago, 'Tipo Pago :') }}
