
{% extends 'FrontBundle:Default:index.html.twig'%}

{%block ubicacion%}
<a href="{{path('categoria')}}">Categoria</a> <div class="breadcrumb_divider"></div><a class="current">Detalles</a>
{%endblock ubicacion%}

{%block cuerpo1%}

<article class="module width_full">
			<header><h3>Detalle Categoria</h3></header>
				<div class="module_content">
                                    <h1>Categoria</h1>
                                    <table class="record_properties">
                                        <tbody>
                                            <tr>
                                                <th>Id</th>
                                                <td>{{ entity.id }}</td>
                                            </tr>
                                            <tr>
                                                <th>Nombre</th>
                                                <td>{{ entity.Nombre }}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    {#<ul class="record_actions">
                                        <li>
                                            <a href="{{ path('categoria') }}">
                                                Volver
                                            </a>
                                        </li>
                                    </ul>#}
                                    <form action="{{ path('categoria_edit', { 'id': entity.id } )}}">                           
                                        <input type="image" src="{{asset('bundles/front/images/icn_edit_article.png')}}">                                                                                             
                                    </form>  
    
    
                                    <form action="{{ path('categoria_delete', { 'id': entity.id }) }}" method="post">
                                    {{ form_widget(delete_form) }}
                                        <input type="image" src="{{asset('bundles/front/images/icn_trash.png')}}">                                                                                          

                                    </form>
                                </div>
                                    
                                    <footer>
                                        <div class="submit_link">
                                        </div>
                                    </footer>
                                    
</article><!-- end of content manager article -->

{%endblock cuerpo1%}
