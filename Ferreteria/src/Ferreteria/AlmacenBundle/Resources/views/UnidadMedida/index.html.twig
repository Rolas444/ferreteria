{%block cuerpo1%}
        
<article class="module width_3_quarter">
		<header><h3 class="tabs_involved">Lista Unidad de Medida</h3>
		<ul class="tabs">
   			<li><a href="#tab1">Pagina 1</a></li>    		
		</ul>
		</header>

		<div class="tab_container">
			<div id="tab1" class="tab_content">
			<table class="tablesorter" cellspacing="0"> 
			<thead> 
				<tr>			        
                                    <!--<th>Id</th>-->
                                    <th>Nombre</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    {#<td><a href="{{ path('unidadmedida_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
