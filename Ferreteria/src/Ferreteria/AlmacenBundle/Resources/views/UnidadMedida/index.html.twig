                                    <td>                                                                                   
                                        <a href="{{ path('unidadmedida_show', { 'id': entity.id }) }}">Detalles</a>                                            
                                            
                                        <a href="{{ path('unidadmedida_edit', { 'id': entity.id }) }}">Editar</a>                                                                                   
